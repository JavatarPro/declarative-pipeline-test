{
  "Job": {
    "ID": "${service}",
    "Name": "${service}-job",
    "Type": "service",
    "Priority": 50,
    "Datacenters": [
      "${dataCenter}"
    ],
    "TaskGroups": [
      {
        "Name": "${groupName}",
        "Count": 1,
        "Tasks": [
          {
            "Name": "${service}-task",
            "Driver": "docker",
            "User": "",
            "Config": {
              "image": "${dockerRegistry}/${dockerImage}",
              "port_map": [
                {
                  "alert": ${internalPort}
                }
              ]
            },
            "Services": [
              {
                "Id": "${serviceId}",
                "Name": "${service}-app",
                "Tags": [
                  "${service}"
                ],
                "PortLabel": "${portLabel}",
                "AddressMode": "",
                "Checks": [
                  {
                    "Id": "",
                    "Name": "alive",
                    "Type": "http",
                    "Command": "",
                    "Args": null,
                    "Port": ${internalPort},
                    "Path": "${healthUrl}",
                    "Protocol": "http",
                    "method": "GET",
                    "PortLabel":, "${portLabel}",
                    "Interval": 10000000000,
                    "Timeout": 2000000000,
                    "InitialStatus": "",
                    "TLSSkipVerify": true
                  }
                ]
              }
            ],
            "Resources": {
              "CPU": ${cpu},
              "MemoryMB": ${ram},
              "Networks": [
                {
                  "Device": "",
                  "CIDR": "",
                  "IP": "",
                  "MBits": 10,
                  "DynamicPorts": [
                    {
                      "Label": "${portLabel}",
                      "Value": 0
                    }
                  ]
                }
              ]
            },
            "Leader": false
          }
        ],
        "RestartPolicy": {
          "Interval": 300000000000,
          "Attempts": 10,
          "Delay": 25000000000,
          "Mode": "delay"
        },
        "ReschedulePolicy": {
          "Attempts": 10,
          "Delay": 30000000000,
          "DelayFunction": "exponential",
          "Interval": 36000000000000,
          "MaxDelay": 3600000000000,
          "Unlimited": false
        },
        "EphemeralDisk": {
          "SizeMB": 300
        }
      }
    ],
    "Update": {
      "MaxParallel": 1,
      "MinHealthyTime": 10000000000,
      "HealthyDeadline": 180000000000,
      "AutoRevert": false,
      "Canary": 0
    }
  }
}